{
    "compilerOptions": {
        "outDir": "./build",
        "sourceMap": true,
        "strict": false,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es2016",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ]
}