{
    "rules": {
        "site_stats": {
            ".read": true,
            ".write": true
        },
        "minesweeper_scores": {
            ".read": true,
            "$difficulty": {
                "$scoreId": {
                    ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid) && (newData.child('userId').val() === auth.uid)",
                    ".validate": "newData.hasChildren(['userId', 'userName', 'time', 'timestamp'])"
                },
                ".indexOn": [
                    "time",
                    "userId"
                ]
            }
        },
        "stock_portfolios": {
            "$userId": {
                ".read": "auth != null && auth.uid === $userId",
                ".write": "auth != null && auth.uid === $userId"
            }
        },
        "stock_leaderboard": {
            ".read": true,
            "$userId": {
                ".write": "auth != null && auth.uid === $userId"
            }
        },
        "juggler": {
            "$userId": {
                ".read": "auth != null && auth.uid === $userId",
                ".write": "auth != null && auth.uid === $userId"
            }
        },
        "leaderboard": {
            ".read": true,
            ".indexOn": [
                "rating"
            ],
            "$userId": {
                ".write": "auth != null && auth.uid === $userId"
            }
        },
        "yacht_leaderboard": {
            ".read": true,
            ".indexOn": [
                "score"
            ],
            "$userId": {
                ".write": "auth != null && auth.uid === $userId"
            }
        },
        "users": {
